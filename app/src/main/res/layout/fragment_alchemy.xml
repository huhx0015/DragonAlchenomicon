<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/alchemy_ingredient_1_button"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_da_button"
                android:elevation="2dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/alchemy_ingredient_1_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/alchemy_ingredient_1_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/alchemy_ingredient_1"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/selector_da_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/alchemy_ingredient_2_button"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_da_button"
                android:elevation="2dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/alchemy_ingredient_2_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/alchemy_ingredient_2_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/alchemy_ingredient_2"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/selector_da_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/alchemy_ingredient_3_button"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_da_button"
                android:elevation="2dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/alchemy_ingredient_3_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/alchemy_ingredient_3_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/alchemy_ingredient_3"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/selector_da_button"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/alchemy_clear_button"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_da_button"
        android:text="@string/alchemy_button_clear"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:elevation="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/alchemy_no_results_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="@string/alchemy_no_recipe_results"
            android:padding="8dp"
            android:visibility="invisible"
            android:background="@drawable/selector_da_button"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/alchemy_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

        <ProgressBar
            android:id="@+id/alchemy_list_progressbar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>